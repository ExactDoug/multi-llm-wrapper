# Brave Search API Configuration
BRAVE_API_KEY=your_api_key_here
MAX_RESULTS_PER_QUERY=20
TIMEOUT_SECONDS=30
RATE_LIMIT=20

# Azure Configuration
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=005789aa-d109-48c1-b690-c157b9b7d953
AZURE_SUBSCRIPTION_ID=20cdb97a-3107-4857-88a5-81488217f327

# LLM Configuration
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your_connection_string_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Content Processing
MAX_CONTENT_LENGTH=1048576  # 1MB in bytes
ALLOWED_CONTENT_TYPES=text/html,text/plain,application/json
MAX_REDIRECTS=3

# Development Settings
DEBUG=false
TESTING=false